{
    "buildCommand": "npm run build",
    "framework": "nextjs",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=1, stale-while-revalidate"
                }
            ]
        }
    ],
    "functions": {
        "app/api/**/*.js": {
            "maxDuration": 10
        },
        "app/api/**/*.ts": {
            "maxDuration": 10
        }
    }
}